#class wudao open
#alias {wd.start} {
    set_last_quest wd;
    show_to_quest 悟道;
    #class wudao.inner open;
    #ticker {wudao} {
        wudao;
    } {180};

    #action {你修行完毕} {
        #delay {wd.done} {
            chifan;
            wudao;
        } {0.1};
    };
    #class wudao.inner close;
    gt 静修阁二楼;
    on_there {
        wudao;
    };
};

#alias {wd.stop} {
    unset_last_quest;
    #class wudao.inner kill;
    show_to_quest 悟道结束;
};

#class wudao close