#alias {attack} {
    pfm fmq;

    #if {"${quest}" == "hb"} {
        #send {perform yizhi-chan.jingmo ${char_id}'s robber 1};
        #send {perform yizhi-chan.jingmo ${char_id}'s robber 2};
        #send {perform yizhi-chan.jingmo ${char_id}'s robber 3};
    };
    #elseif {"${quest}" == "wat"} {
        #send {perform yizhi-chan.jingmo wushi 1};
        #send {perform yizhi-chan.jingmo wushi 2};
        #send {perform yizhi-chan.jingmo wushi 3};
        #send {perform yizhi-chan.jingmo wushi 4};
    };
    #else {
        pfm jingmo;
    };

    #class attack.inner open;
    #ticker {zuida} {
        pfm zuida;
    } {30};
    #ticker {jingmo} {
        #if {"${quest}" == "hb"} {
            #send {perform yizhi-chan.jingmo ${char_id}'s robber 1};
            #send {perform yizhi-chan.jingmo ${char_id}'s robber 2};
            #send {perform yizhi-chan.jingmo ${char_id}'s robber 3};
        };
        #else {
            pfm jingmo;
        };
    } {1};
    #class attack.inner close;

    #if {"${quest}" == "hb"} {
        #class attack.inner open;
        #class attack.inner close;
    };
    #elseif {${mj_started}  == 1} {
        #class attack.inner open;
        #class attack.inner close;
        #if {${xf.type} == -1 || ${xf.type} == 1} {
            #var jiali_count max;
            pfm luohan;
            #class attack.inner open;
            #ticker {luohan} {
                pfm luohan;
            } {5.8};
            #class attack.inner close;
        };
        #elseif {${xf.type} == 2} {
            pfm luohan;
            #class attack.inner open;
            #ticker {luohan} {
                pfm luohan;
            } {5.8};
            #class attack.inner close;
        };
        #elseif {${xf.type} == 3} {
            #class attack.inner open;
            #ticker {quan} {
                halt;
                quan;
            } {5};
            #class attack.inner close;
        };
        #elseif {${xf.type} == 4} {
            #class attack.inner open;
            #class attack.inner close;
        };
    };
    #else {
        #if {${xf.type} == -1 || ${xf.type} == 1} {
            #var jiali_count max;
            pfm luohan;
            #class attack.inner open;
            #ticker {luohan} {
                pfm luohan;
            } {5.8};
            #class attack.inner close;
        };
        #elseif {${xf.type} == 2} {
            pfm luohan;
            #class attack.inner open;
            #ticker {luohan} {
                pfm luohan;
            } {5.8};
            #class attack.inner close;
        };
        #elseif {${xf.type} == 3} {
            #class attack.inner open;
            #ticker {quan} {
                halt;
                quan;
            } {5};
            #class attack.inner close;
        };
        #elseif {${xf.type} == 4} {
            #class attack.inner open;
            #class attack.inner close;
        };
    };
};

