};

#alias {chan} {
    unwi;
    do_wield staff;
    perform dagou-bang.chan;
    wi;
};

#alias {zhuan} {
    unwi;
    do_wield staff;
    perform dagou-bang.zhuan;
    wi;
};

#alias {tiao} {
    #if {${with_weapon} == 1} {
        unwi;
        do_wield staff;
        perform dagou-bang.tiao;
        wi;
    };
};

#action {对方没有使用任何兵器，你无法使用「打狗棒・挑」。} {
    #var with_weapon 0;
};

#alias {chuo} {
    unwi;
    do_wield staff;
    perform dagou-bang.chuo;
    wi;
};

#alias {leiting} {
    unwi;
    perform strike.leiting;
    wi;
};

#alias {yzy} {
    hit %0;
    leiting;
    halt;
};

#alias {sanhui} {
    unwi;
    jiali max;
    perform strike.sanhui;
    jiali none;
    wi;
};

#alias {xiao} {
    unwi;
    remove shield;
    perform strike.xiao;
    wi;
};

