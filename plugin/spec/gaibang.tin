#class gaibang_spec open

#var with_weapon 1;
#alias {attack.prepare} {
    yun powerup;
    #class attack.inner open;
    #if {"${quest}" != "hsz"} {
        #ticker {perf_chan} {
            chan;
        } {1.8};
    };
    #ticker {perf_tiao} {
        tiao;
    } {3.8};
    #class attack.inner close;
};

#alias {attack.end} {
    #var with_weapon 1;
};

#alias {attack} {
    #if {"${quest}" != "hsz"} {
        chan;
    };
    #delay {1} {
        tiao;
    };
    #if {"${quest}" == "hb"} {
    };
    #elseif {${mj_started}  == 1} {
        #class attack.inner open;
        #ticker {chuo} {
            chuo;
        } {2.5};
        #class attack.inner close;
        #if {${xf.type} == -1 || ${xf.type} == 1} {
            sanhui;
        };
        #elseif {${xf.type} == 2} {
        };
        #elseif {${xf.type} == 3 || ${xf.type} == 4} {
        };
        #else {
        };
    };
    #else {
        #if {${xf.type} == -1 || ${xf.type} == 1} {
            sanhui;
            #class attack.inner open;
            #ticker {zhuan} {
                zhuan;
            } {6.8};
            #ticker {sanhui} {
                sanhui;
            } {5.8};
            #class attack.inner close;
        };
        #elseif {${xf.type} == 2} {
            #class attack.inner open;
            #class attack.inner close;
        };
        #elseif {${xf.type} == 3 || ${xf.type} == 4} {
        };
        #else {
        };
    };
};

#macro {\eOP} {
    chan;
};

#macro {\eOQ} {
    zhuan;
};

#macro {\eOR} {
    tiao;
};

#macro {\eOS} {
    chuo;
};

#macro {\e[15~} {
    leiting;
};

#macro {\e[17~} {
    sanhui;
};

#alias {load_map} {
    #cr;
};

