    #action {绿衣少女将小船系在树枝之上，你跨上岸去。} {
        #unaction {绿衣少女将小船系在树枝之上，你跨上岸去。};
        gps.run;
    };
    #action {你沿着踏板走了上去} {
        #unaction {你沿着踏板走了上去};
        gps.run;
    };
    #action {你朝船夫挥了挥手便跨上岸去} {
        #unaction {你朝船夫挥了挥手便跨上岸去};
        gps.run;
    };
};

#alias {gps.zuoche} {
