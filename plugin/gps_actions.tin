#alias {gps.busy} {
    on_unbusy {
        gps.run;
    };
};

#alias {gps.maze.tdf} {
    #var current_direction west;
    #list directions create {east;west;north;south};
    #alias {do_look_next} {
        #math look_count ${look_count}+1;
        #if {${look_count} > 4} {
            on_unbusy {
                ${next_direction};
                do_look;
            };    
        };
        #else {
            #list directions get ${look_count} current_direction;
            look ${current_direction};
        };
    };
    
    #alias {do_look} {
        #class gps.tdf.inner open;
        #var next_direction  west;
        #var look_count 0;
        #action {这里的花丛（huacong）比别的地方} {
            #class gps.tdf.inner kill;
            on_unbusy {
                ${current_direction};
                gps.run;            
            };
        } {8};
        
        #action {这里看起来似乎和其他地方不太一样} {
            do_look_next;
        } {8};
        
        #action {心里有种不祥的预感} {
            #var next_direction ${current_direction};
            do_look_next;
        } {9};
        #class gps.tdf.inner close;
        
        do_look_next;
    };
    
    do_look;
};

#alias {gps.maze.yunhai} {
    #class gps.maze.yunhai.inner open;
    #action {^云海出口} {
        #class gps.maze.yunhai.inner kill;
        set brief 1;
        gps.run;
    };
    #ticker {yunhai.ticker} {
        n;w;e;s;e;e;n;
    } {1.5};
    #class gps.maze.yunhai.inner close;
    set brief 2;
    n;w;e;s;e;e;n;
};

#alias {gps.maze.yunhaib} {
    #class gps.maze.yunhai.inner open;
    #action {^云海入口} {
        #class gps.maze.yunhai.inner kill;
        set brief 1;
        gps.run;
    };
    #ticker {yunhai.ticker} {
        e;s;
    } {0.5};
    #class gps.maze.yunhai.inner close;
    set brief 2;
    s;e;s;
};

#alias {gps.muchang} {
    #var next_action %1;
    #class gps.muchang open;
    #action {青海湖畔美不胜收，你不由停下脚步，欣赏起了风景。} {
        #delay {again} {
            ${next_action};            
        } {1};
        #delay {muchang_delay} {
            #class gps.muchang kill;
            gps.run;
        } {2};
    } {1};
    #delay {muchang_delay} {
        #class gps.muchang kill;
        gps.run;
    } {1};
    #class gps.muchang close;
    
    ${next_action};
};

#alias {gps.qu_sibao} {
    #class gps.sibao.inner open;
    #action {^%d%s《{广陵散|率意帖|溪山行旅图|呕血谱}》$} {
        #list sibao add {%%1};
    };
    #act {^柜子里目前存放的物品有：$} {
        #var sibao {};
        #delay {1} {
            #class gps.sibao.inner kill;
            #if {@numitems{sibao}==4} {
                #loop 4 1 i {getout @item{sibao;$i}};
                #delay 1 {
                    gps.run;
                };
            };
            #else {
                #show 你的柜子里四宝不齐或有多余，无法自动前往梅庄。;
            };
        };
    };
    #class gps.sibao.inner close;
    find;
};

