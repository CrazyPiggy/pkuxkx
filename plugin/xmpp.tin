#class xmpp open;
#var xmpp_chat 1;

#alias {xmpp.start} {
    #alias xmpp.chat.on {
        #var xmpp_chat 1;
    };
    
    #alias xmpp.chat.off {
        #var xmpp_chat 0;
    };

    #run {xmpp} {./bin/xmpp.py ${char_id}};
    #unticker {%*};
    #action {xmpp message: %*:%*} {
        #pkuxkx %%2;
    };
    #pkuxkx;
};

#alias {xmpp.notify} {
    #if {${xmpp_chat} == 1} {
        #xmpp %0;
    };
};
#class xmpp close;
