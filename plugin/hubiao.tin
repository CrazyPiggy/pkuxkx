    #action {~你想要收[1;33m劫匪[2;37;0m为弟子} {
        hb.check_robber gaibang;
    };
    #action {~你想要收[1;34m劫匪[2;37;0m为弟子} {
        hb.check_robber xingxiu;
    };
    #action {~你想要收[1;35m劫匪[2;37;0m为弟子} {
        hb.check_robber huashan;
    };
    #action {~你想要收[1;36m劫匪[2;37;0m为弟子} {
