#class hubiao open
#var hb_max_path_size 45;
#var hb_auto 0;
#var hb_rotate 0;
#var hb_dest nil;
#var hb_first_kill 0;
#var hb_paused 0;
#var hb_info nil;
#var hb_rotate_location nil;
#var hb_rotate_location_count 0;
#var hb_robber_count 0;

@mapcreate{robber_score};
@mapset{robber_score;gaibang;9};
@mapset{robber_score;taohua;8};
@mapset{robber_score;wudang;7};
@mapset{robber_score;xingxiu;6};
@mapset{robber_score;quanzhen;4};
@mapset{robber_score;shaolin;3};
@mapset{robber_score;huashan;2};

#function {should_accept_quest} {
    #var hb_owner_loc @getenv{hb_owner_loc};
    #if {@ismember{%1;hb_blacklist:${hb_owner_loc}} != 0} {
        #return 0;
    };
    #if {"${xy_info}" == "on" && {@ismember{%1;hb_blacklist_baowei:${hb_owner_loc}} != 0}} {
        #return 0;
    };
    #return 1;
};

#alias {hb.teardown} {
    #var quest nil;
    #var hb_robber_count 0;
    #class hb_setup_inner kill;
    #class clear_npc.inner kill;
    #unticker {hb_ticker};
    set brief 2;
};

#alias {hb.traverse} {
    #alias {auto_pp_done} {
        #var gps_traverse_location %%0;
        #alias {gps_check_room_done} {
            #if {${gps.roomno} == -1} {
                #delay {1} {
                    show_to_info 当前房间未记录, 无法遍历伙计;
                };
            };
            #else {
                INVOKE gps.traverse ${gps.roomno} "${gps_traverse_location}";
                #var hb_path ${gps_path};
                #var hb_path_index 1;
                #list hb_path size hb_path_size;
                #var hb_paused 0;
                #if {${hb_path_size} == 0} {
                    show_to_info 无法遍历伙计;
                };
                #else {
                    hb.run;
                };
            };  
        };
        #if {"${gps_traverse_location}" == "nil"} {
            show_to_info 伙计不存在;
            hb.b;
        };
        #else {
            gps.check_room {
                gps_check_room_done;
            };
        };
    };

    autopp {
        auto_pp_done;
    };
};

#alias {hb.run} {
    #list hb_path get ${hb_path_index} hb_next_step;
    #if {@startwith{${hb_next_step};gps}} {
        #replace {hb_next_step} {gps} {hb};
    };
    #else {
        #var hb_next_step gan che to ${hb_next_step};
    };
    #if {${qx_percent} < 50 || ${js_percent} < 50 || ${nl_percent} < 20} {
        hb.pause;
        #delay {hb_move} {
            on_truce {
                on_health {hb.resume};
            };
        } {3};
    };
    #else {
        #if {${hb_path_index} > ${hb_path_size}} {
            hb.pause;
            #delay {hb_move} {
                #if {"@getenv{hb_state}" == "STARTED"} {
                    @setenv{hb_state;TRAVERSE};
                };
                hb.resume;
            } {3};
        };
        #else {
            #if {${eff_qx_percent} < 95} {
                #2 yun heal;
            };
            #if {${eff_qx_percent} < 50} {
                #2 yun lifeheal;
            };
            #delay {hb_move} {
                #if {${hb_paused} == 0} {
                    ${hb_next_step};
                };
            } {3};
        };
    };
};

#var hb_retry_count 0;
#alias {hb.setup} {
    set brief 1;
    #var quest hb;
    #var hb_remaining_path_size ${hb_max_path_size};
    #var hb_path_index 1;
    #class hb_setup_inner open;

    #alias {hb.guohe} {
        #class guohe.inner open;
        #ticker {sw/yell_boat} {
            yell boat;
        } {5};
        #action {正等着你呢，上来吧。} {
            gan che to enter;
        };
        #action {艄公将一块踏脚板搭上堤岸，} {
            gan che to enter;
        };
        #alias {shangchuan} {
            #unticker {sw/yell_boat};
            #action {所有人被赶下了渡船} {
                #unaction {所有人被赶下了渡船};
                #class guohe.inner kill;
                #math hb_path_index ${hb_path_index}+1;
                #var hb_paused 0;
                hb.run;
            };
        };
        #action {^黄河渡船$} {
            shangchuan;
        };
        #action {^长江渡船$} {
            shangchuan;
        };
        #class guohe.inner close;

        hb.pause;
        ask shao gong about huanghe;
        ask shao gong about jiang;
    };
    #alias {hb.delay} {
        #var gps_delay 1.5;
        #var gps_delay %1;
        #delay {${gps_delay}} {
            #math hb_path_index ${hb_path_index}+1;
            hb.run;
        };
    };
    #alias {hb.busy} {
        on_unbusy {
            #math hb_path_index ${hb_path_index}+1;
            hb.run;
        };
    };
    #alias {hb.clear} {
        #var tmp_blocker %1;
        #class clear_blocker.inner open;
        #action {你想杀谁} {
            #class clear_blocker.inner kill;
            #math hb_path_index ${hb_path_index}+1;
            hb.run;
        };
        #ticker {tmp_blocker_ticker_kill} {
            killall ${tmp_blocker};
        } {5};
        #class clear_blocker.inner close;
        hb.pause;
        killall ${tmp_blocker};
    };

    #action {看来该找机会逃跑了} {
        hb.pause;
        show_to_tuiche 丢镖;
        xmpp.notify 丢镖;
        hb.teardown;
        hb.b;
    };

    #action {^慢慢地你终于又有了知觉....} {
        show_to_tuiche 挂了;
        notify.alert 挂了;
        xmpp.notify 挂了;
        hb.teardown;
        hb.b;
    };

    #action {^你的眼前一黑，接著什么也不知道了} {
        hb.pause;
    };

    #action {你想杀谁？} {
        hb.retry;
    };

    #action {镖车还没有跟上来呢,走慢点.} {
        hb.retry;
    };
    
    #action {你还是先把对手解决了再说吧} {
        #math hb_retry_count ${hb_retry_count}+1;
        #if {${hb_retry_count} > 3} {
            #var hb_retry_count 0;
            killall;
        };
        hb.retry;
    } {1};

    #action {镖车呼啦一声散了架} {
        hb.pause;
        show_to_tuiche 镖车呼啦一声散了架;
        hb.b;
    };

    #action {busy_for_move} {
        hb.retry;
    };

    #action {^你赶着镖车驶了过来。$} {
        #var hb_retry_count 0;
        #if {${hb_paused} == 0} {
            #math hb_path_index ${hb_path_index}+1;
            hb.run;
        };
    };

    #action {劫匪个起纵遁入暗里不见了} {
        hb.detect_enemy;
        raw;
        hb.retry;
    };

    #action {^这个方向} {
        #if {${hb_paused} == 0} {
            hb.pause;
            hb.resume;
        };
    };

    #action {劫匪趁你不注意，推着镖车就跑，你赶紧追了上去。} {
        hb.pause;
        @setenv{mixin_lunci;6};
        #delay {hb_delay} {
            hb.resume;
        } {3};
    };

    #action {劫匪伸手一拦道} {
        war;
        hb.retry;
    };

    #action {你长笑一声，开始对周围众人痛下杀手！} {
        #var hb_first_kill 1;
    };

    #action {劫匪突然从暗处跳了出来} {
        hb.detect_enemy;
        #if {${hb_first_kill} == 0} {
            killall robber;
        };
        #else {
            war;
        };
    };

    #action {围上来几个伙计将镖车拉了进去} {
        @setenv{hb_state;ENDED};
        hb.pause;
        raw;
        show_to_tuiche 任务完成;
        notify escort done;
        hb.teardown;
        taopao;
        on_truce {
            #if {@getenv{hb_lunci} == @getenv{mixin_lunci}} {
                chain on_sell get.qian get.san repair special_repair gem.combine hb.b;
            };
            #else {
                hb.b;
            };
        };
    } {1};

    #class hb_setup_inner close;

    #var hb_elapsed_time 0;
    #ticker {hb_ticker} {
        #math hb_elapsed_time ${hb_elapsed_time}+1;
        show_to_tuiche ${hb_info} --> ${hb_elapsed_time}:00;
    } {60};
};

#alias {hb.retry} {
    #if {${hb_paused} == 0} {
        #delay {hb_move} {
            hb.run;
        } {1.5};
    };
};

#alias {hb.pause} {
    #var hb_paused 1;
    #undelay {hb_move};
};

#alias {hb.get_owner} {
    #action {%S %S总镖头 %*(%S %S)} {
        #unaction {%S %S总镖头 %*(%S %S)};
        @setenv{hb_owner;@lower{%%4 %%5}};
    };
    #alias {get_pos_done} {
        @setenv{hb_owner_loc;${pos.room}};
    };
    get_pos {
        get_pos_done;
    };
};

#alias {hb.d} {
    #if {"@getenv{hb_state}" == "GOT_CAIWU"} {
        give cai wu to @getenv{hb_owner};
    };
    #elseif {"@getenv{hb_state}" == "ENDED"} {
        #if {@getenv{hb_lunci} == @getenv{mixin_lunci}} {
            @setenv{hb_lunci;0};
            notify.alert next mixin;
            xmpp.notify next mixin;
            play alert.wav;
        };
        #else {
            ask @getenv{hb_owner} about finish;
        };
    };
    #elseif {"@getenv{hb_state}" == "GOT_MIXIN"} {
        give mixin to @getenv{hb_owner};
        xian mixin;
    };
    #else {
        hb.f;
        #if {${hb_auto} == 1} {
            hb.start;
        };
    };
};

#alias {hb.q} {
    #var getesc_current_id 0;
    #if {"%1" != ""} {
        getesc %1;
    };
    #else {
        listesc;
    }
};


#alias {hb.f} {
    @setenv{hb_lunci;0};
    @setenv{hb_lunci_total;0};
    @setenv{hb_state;nil};
    @setenv{mixin_lunci;6};
    hb.teardown;
    ask @getenv{hb_owner} about fail;
};

#alias {hb.b} {
    gt @getenv{hb_owner_loc};
    on_there {
        hb.d;
    };
};

#alias {hb.start} {
    set_last_quest hb;
    xmpp.echo.off;
    set brief 2;
    #var hb_auto 1;

    #class hb.auto.inner open;
    #action {^你不是才要了任务吗} {
        hb.f;
        on_unbusy {
            hb.start;
        };
    };

    #action {你一共被奖励了：} {
        #class tmp.inner open;
        #action {%*点经验；} {
            #class tmp.inner kill;
            show_to_info @ctd{%%%1} 点经验;
        };
        #delay {hb_auto_delay} {
            #if {${hb_auto} == 1} {
                hb.start;
            };
        } {3};
        #class tmp.inner close;
    };

    #action {${char_name}帮%*追回财物，额外获得%*点经验} {
        show_to_info 额外获得 @ctd{%%2} 点经验;
        do_show 密信完成;
    };

    #alias {got_gem} {
        #action {你将手中%*{◎|☆|★}%*放进了宝石袋} {
            show_to_info 掉宝: %%%1%%%2%%%3;
            notify.info %%%1%%%2%%%3;
            gem.record %%%1%%%2%%%3;
            #var gem_level @gemlevel{%%%1};
            play gem2.wav;
            xmpp.notify 掉宝: %%%1%%%2%%%3;
        };
        pack gem;
        #delay {pack_gem} {
            #unaction {你将手中%*{◎|☆|★}%*放进了宝石袋};
        } {3};
    };

    #action {哇，你太厉害了，这么快就把这些财物追回，我有重谢！} {
        got_gem;
        do_show 密信完成;
    };

    #action {掉了出来一颗} {
        got_gem;
    };

    #action {%d%s%S%s%S%s待认领} {
        #var getesc_id %%1;
        #var getesc_address %%3;
        #if {${getesc_current_id} == 0 && @should_accept_quest{${getesc_address}} == 1} {
            #var getesc_current_id ${getesc_id};
        };
    };

    #action {来认领押镖任务} {
        #if {${getesc_current_id} != 0} {
            #var hb_rotate_location_count 0;
            hb.q ${getesc_current_id};
        };
        #else {
            #math hb_rotate_location_count ${hb_rotate_location_count} + 1;
            #if {${hb_rotate} == 1 && ${hb_rotate_location_count} > 3 && "${hb_rotate_location}" != "nil"} {
                #var hb_rotate_location_count 0;
                hb.stop;
                gt ${hb_rotate_location};
                on_there {
                    hb.start;
                };
            };
            #else {
                #delay {hb_auto_delay} {
                    hb.start;
                } {10};
            };
        };
    };

    #action {请选择其他任务} {
        #delay {hb_auto_delay} {
            hb.q;
        } {2};
    };

    #action {你上次运镖太辛苦了} {
        #delay {hb_auto_delay} {
            hb.q;
        } {10};
    };

    #action {你所领的任务在任务列表中并不存在} {
        #delay {hb_auto_delay} {
            hb.q;
        } {2};
    };

    #action {${char_name}把这批红货送到%*他已经派了个伙计名叫%*到%*附近接你} {
        @setenv{hb_state;STARTED};
        @setenv{hb_lunci;@eval{@getenv{hb_lunci}+1}};
        @setenv{hb_huoji;%%2};
        INVOKE gps.get_area %%1;
        #var hb_dest ${gps.area}%%3;
        @setenv{hb_dest;${hb_dest}};
        #var hb_info %%2|${hb_dest};
        show_to_tuiche ${hb_info};
        autopp.set %%2;

        hb.setup;
        hb.resume;
    } {1};

    #action {递给你一封密信} {
        @setenv{hb_state;GOT_MIXIN};
        @setenv{hb_lunci_total;@eval{@getenv{hb_lunci_total}+1}};
        @setenv{hb_lunci;0};
        show_to_tuiche 密信;
        xian mixin;
    };

    #class hb.auto.inner close;

    @declarenv{hb_state;nil};
    @declarenv{mixin_lunci;6};
    @declarenv{hb_lunci;0};
    @declarenv{hb_lunci_total;0};

    hb.get_owner;
    #var hb_state @getenv{hb_state};
    #if {"${hb_state}" == "GOT_CAIWU"} {
        show_to_info 交财物先;
    };
    #if {"${hb_state}" == "GOT_MIXIN"} {
        show_to_info 密信;
    };
    #elseif {"${hb_state}" == "STARTED" || "${hb_state}" == "TRAVERSE" } {
        #var hb_huoji @getenv{hb_huoji};
        #var hb_dest @getenv{hb_dest};
        #if {"${hb_huoji}" == "nil" || "${hb_dest}" == "nil"} {
            show_to_info 推车失败;
            hb.f;
        };
        #else {
            show_to_info 继续推车;
            hb.setup;
            autopp.set ${hb_huoji};
            #var hb_remaining_path_size 0;
            hb.resume;            
        };
    };
    #else {
        #math next_lunci @getenv{hb_lunci}+1;
        show_to_quest 推车: @getenv{hb_lunci_total}+${next_lunci}: 准备;
        on_health {hb.q};
    };
};


